# Dockerfile for audio2sub with Google Gemini backend
FROM python:3.13-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install base dependencies manually for better layer caching
RUN pip install --no-cache-dir \
    ffmpeg-python>=0.2.0 \
    pysrt>=1.1.2 \
    tqdm \
    'onnxruntime>=1.14,<2'

# Install PyTorch
RUN pip install --no-cache-dir \
    torch>=2.1.0 \
    torchaudio>=2.1.0

# Pre-download Silero VAD model
RUN python -c "import torch; torch.hub.load(repo_or_dir='snakers4/silero-vad', model='silero_vad', force_reload=False, onnx=False, trust_repo=True)"

# Pre-download Whisper turbo model directly to cache folder
RUN mkdir -p /root/.cache/whisper && \
    curl -L "https://openaipublic.azureedge.net/main/whisper/models/aff26ae408abcba5fbf8813c21e62b0941638c5f6eebfb145be0c9839262a19a/large-v3-turbo.pt" \
    -o /root/.cache/whisper/large-v3-turbo.pt

# Install audio2sub from PyPI
ARG VERSION=latest
RUN if [ "$VERSION" = "latest" ]; then \
    pip install --no-cache-dir audio2sub[whisper]; \
    else \
    pip install --no-cache-dir audio2sub[whisper]==$VERSION; \
    fi

# Set default backend
ENV DEFAULT_TRANSCRIBER=whisper

# Create directory for media files
RUN mkdir -p /media

WORKDIR /media

LABEL org.opencontainers.image.title="audio2sub (whisper)"
LABEL org.opencontainers.image.description="Audio2Sub with OpenAI Whisper backend for speech-to-text transcription"
LABEL org.opencontainers.image.url="https://github.com/Xavier-Lam/audio2sub"
LABEL org.opencontainers.image.source="https://github.com/Xavier-Lam/audio2sub"
LABEL org.opencontainers.image.documentation="https://hub.docker.com/repository/docker/xavierlam/audio2sub"

ENTRYPOINT ["audio2sub"]
